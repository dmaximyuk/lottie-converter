{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src/",
    "outDir": "./dist",
    "paths": {
      "assets": ["assets"],
      "core": ["core"],
      "uikit": ["uikit"],
      "components": ["components"],
      "translation": ["translation"],
      "types": ["types"],
      "styles": ["styles"],
      "functions": ["functions"],
      "routes": ["routes"],
      "models": ["models"],
      "vars": ["vars"]
    },
    "composite": true
  },
  "include": ["src", "vite.config"]
}
